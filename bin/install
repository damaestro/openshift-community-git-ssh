#!/bin/bash -e

case "$1" in
  -v|--version)
    version="$2"
esac

source $OPENSHIFT_CARTRIDGE_SDK_BASH

ssh-keygen -b 4096 -N '' -f ${OPENSHIFT_DATA_DIR}/git-ssh/id_rsa > /dev/null
public_key=$(cat ${OPENSHIFT_DATA_DIR}/git-ssh/id_rsa.pub)

client_result ""
client_result "GITSSH configured for GitHub.  Please add the following public key to your repos:"
client_result ""
client_result $public_key
client_result ""
client_result "Note:  You can replace this autogenerated keypair at ${OPENSHIFT_DATA_DIR}/git-ssh"
client_result ""
